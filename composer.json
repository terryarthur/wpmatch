{
  "name": "wpmatch",
  "type": "project",
  "minimum-stability": "stable",
  "require": {
    "php": ">=7.4"
  },
  "require-dev": {
    "phpunit/phpunit": "^9.0",
    "wp-coding-standards/wpcs": "^2.3",
    "dealerdirect/phpcodesniffer-composer-installer": "^0.7.0",
    "squizlabs/php_codesniffer": "^3.6"
  },
  "scripts": {
    "phpcs": "phpcs --standard=WordPress plugin/ theme/",
    "phpcbf": "phpcbf --standard=WordPress plugin/ theme/",
    "test": "phpunit"
  },
  "config": {
    "allow-plugins": {
      "dealerdirect/phpcodesniffer-composer-installer": true
    }
  }
}